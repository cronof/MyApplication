<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select size"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight=".3"
            android:layout_marginBottom="20dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/xs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size XS"
                            android:onClick="onRadioButtonClicked"/>
                        <RadioButton
                            android:id="@+id/s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size S"
                            android:onClick="onRadioButtonClicked"/>
                        <RadioButton
                            android:id="@+id/m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size M"
                            android:onClick="onRadioButtonClicked"/>
                        <RadioButton
                            android:id="@+id/l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size L"
                            android:onClick="onRadioButtonClicked"/>
                        <RadioButton
                            android:id="@+id/xl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size XL"
                            android:onClick="onRadioButtonClicked"/>
                        <RadioButton
                            android:id="@+id/xxl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXL"
                            android:onClick="onRadioButtonClicked"/>
                    </RadioGroup>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select color"
            android:textSize="20dp"/>
            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:orientation="vertical"
                 android:layout_weight=".5">
                 <ScrollView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/cbRed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Red"
                            android:onClick="onCheckboxClicked"/>
                        <CheckBox
                            android:id="@+id/cbGreen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Green"
                            android:onClick="onCheckboxClicked"/>
                        <CheckBox
                            android:id="@+id/cbBlue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blue"
                            android:onClick="onCheckboxClicked"/>
                        <CheckBox
                            android:id="@+id/cbPink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pink"
                            android:onClick="onCheckboxClicked"/>
                        <CheckBox
                            android:id="@+id/cbWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="White"
                            android:onClick="onCheckboxClicked"/>
                        <CheckBox
                            android:id="@+id/cbBlack"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Black"
                            android:onClick="onCheckboxClicked"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <EditText
                android:id="@+id/edt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please specify the number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_selector"
                android:text="Submit"
                android:onClick="submit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show your order here!!"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
